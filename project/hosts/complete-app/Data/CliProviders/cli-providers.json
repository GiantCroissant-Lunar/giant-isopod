{
  "providers": [
    {
      "id": "pi",
      "displayName": "Pi",
      "executable": "pi",
      "args": ["--mode", "text", "--no-session", "--provider", "{provider}", "--model", "{model}", "-p", "{prompt}"],
      "env": {
        "FORCE_COLOR": "1",
        "ZAI_API_KEY": "{ZAI_API_KEY}"
      },
      "defaults": {
        "provider": "zai",
        "model": "glm-4.7"
      }
    },
    {
      "id": "kilo",
      "displayName": "Kilo",
      "executable": "kilo",
      "args": ["run", "{prompt}"],
      "env": {},
      "defaults": {}
    },
    {
      "id": "codex",
      "displayName": "Codex",
      "executable": "codex",
      "args": ["exec", "{prompt}", "--full-auto"],
      "env": {},
      "defaults": {}
    },
    {
      "id": "kimi",
      "displayName": "Kimi",
      "executable": "kimi",
      "args": ["--print", "-p", "{prompt}"],
      "env": {},
      "defaults": {}
    }
  ]
}
